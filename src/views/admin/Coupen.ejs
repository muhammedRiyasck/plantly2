</div>


<script defer src="https://cdn.crop.guide/loader/l.js?c=YYYBCT"></script>


<script>

  //  AddCoupenSweetAlert :-

  const msg = document.getElementById('msg');

  if(msg.textContent.trim() == 'good'){

    Swal.fire({

      title: "Coupen Added",
      text: "Coupen Added Successfully",
      icon: "success"

    });

  }

  //  CoupenAction :-

  
  function action(id){
    const btn = document.getElementById(`action${id}`);
    
    fetch(`/admin/copenAction` , {method : 'post',headers:{'Content-Type':'application/json'},body:JSON.stringify({id})})

    if (btn.textContent.trim() === 'De-Active') {

        btn.textContent = 'Active'; 
        btn.classList.remove('btn-outline-danger');
        btn.classList.add('btn-outline-success');

      } else {

        btn.textContent = 'De-Active'; 
        btn.classList.remove('btn-outline-success');
        btn.classList.add('btn-outline-danger');
      }

  }

  //  CoupenDelete :-

  function deletCoupen(id){ 

    console.log(id);

    fetch(`/admin/deleteCoupen?id=${id}` , {method : 'put'})

    .then(res => res.json())

    .then(data => {

      if(data.success){

       const Toast = Swal.mixin({

          toast: true,
          position: "top-end",
          showConfirmButton: false,
          timer: 800,
          timerProgressBar: true,

          didOpen: (toast) => {

            toast.onmouseenter = Swal.stopTimer;
            toast.onmouseleave = Swal.resumeTimer;

          }

        });

        Toast.fire({

          icon: "success",
          title: "Deleted Successfully"
          
        }).then(()=>{

          // $('#reloadDiv').load('/admin/coupen #reloadDiv');
          window.location.reload()
        })

      }

    })
  }


  //  Coupen Validation :-

  document.getElementById('couponForm').addEventListener('submit', function(event) {
    
    event.preventDefault();
    
    document.getElementById('name').textContent = '';
    // document.getElementById('minimum').textContent = '';
    // document.getElementById('maximum').textContent = '';
    document.getElementById('dis').textContent = '';

    // Get form inputs

    var couponName = document.getElementById('couponName').value.trim();
    var discount = document.getElementById('discount').value.trim();
    // var minimum = document.getElementsByName('min')[0].value.trim();
    // var maximum = document.getElementsByName('max')[0].value.trim();

    // Validation

    var isValid = true;

    if (couponName === '') {

      document.getElementById('name').textContent = 'Coupon name is required';
      isValid = false;

    }

      // if (isNaN(minimum) || minimum === '' || minimum <= 0) {
      //   document.getElementById('minimum').textContent = 'Enter positive number';
      //   isValid = false;
      // }

      // if (isNaN(maximum) || maximum === '' || maximum <= 0) {
      //   document.getElementById('maximum').textContent = 'must be a positive number';
      //   isValid = false;
      // }

    if (isNaN(discount) || discount === '' || discount < 0 || discount > 99) {
      document.getElementById('dis').textContent = 'Discount rate maximujm upto 99 %';
      isValid = false;
    }

    if (isValid) {

      event.target.submit();

    }

  });

</script>

<style>

.flip-card {
  background-color: transparent;
  width: 300px;
  height: 300px;
  perspective: 1000px;
  font-family: sans-serif;
  margin-bottom: 1rem;
